<Window x:Class="Calendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        ResizeMode = "NoResize"
        Title="Kalendarz version.1.0" Height="400" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Viewbox
            Width="320"
            Height="340"
            Stretch="Fill"
            StretchDirection="Both">
            <Calendar x:Name ="cal" SelectionMode="SingleDate" SelectedDatesChanged="cal_SelectedDatesChanged"/>
        </Viewbox>
        <Label x:Name ="label1" Grid.Column="1" Content = "Zadania do wykonania:"/> 
        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="0,22,10,0">
            <ItemsControl x:Name="list_of_tasks">
            </ItemsControl>
        </StackPanel>
        <Button Grid.Column="1" Click ="Create_task" Content="Utwórz nowe zadanie" 
                HorizontalAlignment="Right" Margin="0,310,20,15" 
                VerticalAlignment="Top" Height="34" Width="118"/>

    </Grid>
</Window>
